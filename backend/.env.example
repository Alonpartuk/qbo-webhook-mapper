# Server
PORT=3001
NODE_ENV=development

# BigQuery
GOOGLE_CLOUD_PROJECT=octup-testing
BIGQUERY_DATASET=qbo_webhook_mapper
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# QuickBooks OAuth
QBO_CLIENT_ID=your_client_id
QBO_CLIENT_SECRET=your_client_secret
QBO_REDIRECT_URI=http://localhost:3001/api/oauth/qbo/callback
QBO_ENVIRONMENT=sandbox

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_change_in_production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Admin Dashboard
ADMIN_BASE_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
ADMIN_ALLOWED_DOMAINS=octup.com,example.com

# Microsoft Entra ID (Azure AD) SSO
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_tenant_id_or_common
MICROSOFT_REDIRECT_URI=http://localhost:3001/api/admin/auth/microsoft/callback
